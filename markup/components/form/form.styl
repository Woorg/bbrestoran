.form
    &__in
        @extends .in
        padding-top 36px
        padding-bottom 28px
    &__title
        margin-bottom 31px
        font-size 30px
        text-transform uppercase
        text-align center
    // &__form

    &__row
        margin-bottom 26px
        font-size 0
        text-align center
        cf()
    &__row_second
        margin-bottom 30px
    &__row_bottom
        margin-bottom 0
    &__field
        margin-left 70px
        display inline-block
        vertical-align top
        font-size 0
        &:first-child
            margin-left 0
    &__label
        display inline-block
        vertical-align middle
        cursor pointer
        hide-text()
    &__label_date
        bg($calendar-icon)
    &__label_time
        bg($clock-icon)
    &__label_person
        bg($person-icon)
    &__input
        border 1px solid #323232
        margin-left 10px
        padding 6px 6px 6px 12px
        display inline-block
        vertical-align middle
        width 278px
        min-height 28px
        font-size 20px
        border-radius 6px
        +placeholder()
            color #7F7F7F
    &__submit
        border none
        padding 15px 46px 12px
        background #000
        font-size 25px
        color #fff
        text-transform uppercase
        text-align center
        border-radius 6px
        transition background .2s ease
        &:hover
            background #534741
