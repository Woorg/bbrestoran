.header
    position fixed
    z-index 2
    top 0
    left 0
    right 0
    width 100%
    min-height 68px
    background linear-gradient(to bottom,#0071BC ,#0071BC 100%)
    border-bottom 1px solid #29ABE2
    box-shadow 6px 6px 8px rgba(0,0,0,0.5)
    cf()
    &__in
        min-width 1200px
    &__logo
        margin 4px 0 0 49px
        float left
    &__nav
        position absolute
        top 22px
        left 50%
        margin-left -288px
        width 616px
    &__contacts
        position relative
        margin-top 20px
        margin-right 30px
        padding-right 40px
        float right
        font-family $robotoT
        font-size 18px
        font-weight normal
        color #FFF
        letter-spacing 1px
        transition opacity .3s ease
        text-transform uppercase
        opacity 1
        &:hover
            opacity .8
        &:after
            position absolute
            top 50%
            right 0
            content ""
            margin-top -12px
            bg($mail-icon)

.nav
    &__list
        font-size 0
    &__item
        margin-left 28px
        display inline-block
        vertical-align top
        &:first-child
            margin-left 0
    &__link
        font-family $serifBld
        font-size 18px
        color #fff
        text-decoration none
        opacity 1
        transition opacity .2s ease
        &:hover
            opacity .9

.logo
    width 80px
    height 60px
    background url('../img/general/logo.png') no-repeat
    background-size cover
    hide-text()

